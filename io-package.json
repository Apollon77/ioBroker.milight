    "objects": [
        {
            "_id": "_design/milight",
            "language": "javascript",
            "views": {
                "listDevices": {
                    "map": "function(doc) {\n  if (doc._id.match(/^milight\\.[0-9]+\\.\\*?[A-Za-z0-9_-]+(\\.[0-9]+)?$/)) {\n   emit(doc._id, {ADDRESS:(doc.native?doc.native.ADDRESS:''),VERSION:(doc.native?doc.native.VERSION:'')});\n  }\n}"
                },
                "paramsetDescription": {
                    "map": "function(doc) {\n  if (doc._id.match(/^milight\\.meta/) && doc.meta.type === 'paramsetDescription') {\n   emit(doc._id, doc);\n  }\n}"
                }
            }

        },
        {
            "_id": "milight.meta.roles",
            "parent": "milight",
            "type": "meta",
            "meta": {
                "type": "roles",
                "adapter": "milight"
            },
            "common": {

            },
            "native": {
                "chTYPE": {
                    "DIMMER":                       "light.dimmer"
                },
                "dpCONTROL": {
                    "DIMMER.LEVEL":                 "level.dimmer",
                    "HUE.LEVEL":		    "level.hue",
                    "BRIGHTNESS.LEVEL":		    "level.",
                    "SPEEDUP.LEVEL":			"level",
                    "SPEEDDOWN.LEVEL":			"",
                    "DISCO.MODE":			"",
                    "COLOR:MODE":			""
                },
                "chTYPE_dpNAME": {
                    "DIMMER.LEVEL":                 "level.dimmer",
                    "DIMMER.OLD_LEVEL":             "value.dimmer",
                    "DIMMER.LEVEL_REAL":            "value.dimmer"
                },
                "dpNAME": {
                    "CONTROL_MODE":                 "indicator",
                    "STATE":                        "state",
                    "LEVEL":                        "level",
                    "BRIGHTNESS":                   "value.brightness"
                }
            }
        },
        
        {
            "_id": "milight.meta.RGBW.DIMMER.1",
            "type": "meta",
            "meta": {
                "adapter": "milight",
                "type": "paramsetDescription"
            },
            "common": {},
            "native": {
                "LEVEL": {
